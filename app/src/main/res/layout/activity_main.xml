<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_marginTop="20dp">
<EditText
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:hint="Email"
    android:gravity="center"
    android:id="@+id/tvNmae"
    android:layout_centerHorizontal="true"
    android:drawableRight="@drawable/iic"

    />

    <EditText
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:id="@+id/tvPass"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:layout_below="@id/tvNmae"
    android:hint="PassWord"
    android:drawableRight="@drawable/iic"
    />


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot password? "
        android:layout_below="@id/tvPass"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@id/tvPass"
        android:layout_marginTop="12dp"
        android:id="@+id/check"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up "
        android:layout_below="@id/check"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:background="@color/colorAccent"
        android:id="@+id/sign"
        />
    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="هل نسيت كلمة السر "-->
        <!--android:layout_below="@id/tvPass"-->
        <!--android:layout_centerHorizontal="true"-->
       <!--android:layout_alignEnd="@id/tvPass"-->
        <!--android:layout_marginTop="15dp"-->
        <!--/>-->


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/m"
        android:id="@+id/imgg"
        android:layout_marginTop="50dp"
        android:layout_below="@id/sign"
        android:layout_centerInParent="true"

        />
</RelativeLayout>